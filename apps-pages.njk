---
layout: layouts/base.njk
pagination:
    data: apps
    size: 1
    alias: apps
permalink: "app/{{apps.flavour}}"
---

<div class="max-w-screen-lg mb-12 mx-4 2xl:max-w-screen-xl lg:mx-auto">
<a class="flex place-content-center lg:place-content-start" href="/apps">
  <div class="inline-flex mb-6 cursor-pointer hover:bg-blueGray-600 rounded-full bg-blueGray-700 px-3 py-1.5  items-center space-x-2">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blueGray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    <span class="text-sm text-blueGray-300 font-medium">Back to flavours</span>
  </div>
</a>

{% include ["_includes/flavours/", apps.flavour, ".njk"] | join %}

<div class="lg:flex mt-2 lg:space-x-8">
  {% if apps.icon %}
  <div style="background-image: url({{apps.icon}})" class="w-32 h-32 mx-auto lg:m-0 bg-contain bg-no-repeat bg-center rounded-3xl"></div>
  {% endif %}
    <div class="flex-1 text-center lg:text-left mt-4 lg:mt-0">
        <h1 class="text-blueGray-200 text-3xl font-bold">{{apps.name}}</h1>
        <p class="text-blueGray-300 w-full mx-auto lg:m-0 prose  prose-md max-w-prose mt-2">{{apps.description}}</p>
        <div class="flex items-center place-content-center lg:place-content-start space-x-3 mt-3">
          <a href="{{apps.repository}}" target="_blank" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Contribute
          </a>
          <a href="/contribute/" target="_blank" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Donate
          </a>
        </div>
        
    </div>
</div>


<div class="border-t border-blueGray-600 mt-12 py-5 sm:p-0">
    <dl class="sm:divide-y sm:divide-blueGray-600">

      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-blueGray-400">
          Included in flavours
        </dt>
        <dd class="mt-1 text-sm text-blueGray-200 sm:mt-0 sm:col-span-2">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-green-100 text-green-800">
            {% for f in apps.flavours %}
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-yellow-100 text-yellow-800 inline-flex items-center">
                <svg width="14" height="14" class="mr-1" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 1000 1000" enable-background="new 0 0 1000 1000" xml:space="preserve"><metadata> Svg Vector Icons : http://www.onlinewebfonts.com/icon </metadata><g><g transform="matrix(1 0 0 -1 0 1920)"><path d="M293.4,1749.4c1.3,21.9,6.5,42.7,15.8,62.6c9.3,19.9,21.4,36.9,36.4,51.3c15,14.3,32.5,25.7,52.8,34.1c20.2,8.4,41.5,12.6,63.9,12.6c22.9,0,44.6-4.3,65.2-13s38.6-20.7,54.1-36c15.5-15.3,27.5-33,36-53.1l-4.5,0.4c-13.6,0-27-1.3-40.3-3.8c-13.3-2.5-26-6.1-38.1-10.7c-12.1-4.6-23.6-10.4-34.5-17.1c-10.9-6.8-21.3-14.3-31.1-22.6c-27.1,11.1-54.5,16.6-82.2,16.6C354.5,1770.5,323.3,1763.5,293.4,1749.4z M597.6,1495.4c5.3,19.9,7.9,38.7,7.9,56.5c0,35.4-8,68.6-24.1,99.5c-16.1,30.9-37.9,56.5-65.6,76.9c29.4,20.6,61.8,30.9,97.2,30.9c23.1,0,45.1-4.5,66-13.4c20.9-8.9,38.9-21,54.1-36.2c15.2-15.2,27.3-33.2,36.2-54.1s13.4-42.8,13.4-66c0-34.4-9.5-65.8-28.6-94.2H597.6z M227.9,1495.4c-7,19.6-10.6,38.4-10.6,56.5c0,18.3,2.8,36.2,8.5,53.5c5.7,17.3,13.8,32.9,24.3,46.7c10.6,13.8,22.7,26,36.6,36.6c13.8,10.6,29.4,18.7,46.7,24.3c17.3,5.7,35.2,8.5,53.5,8.5c23.1,0,45.1-4.5,66-13.4c20.9-8.9,38.9-21,54.1-36.2c15.2-15.2,27.3-33.2,36.2-54.1c8.9-20.9,13.4-42.8,13.4-66c0-18.1-3.5-36.9-10.6-56.5H227.9z M500,930c-4.5,0-9,1.7-13.6,5.1c-4.5,3.4-7.8,7.6-9.8,12.6l-164.3,434.6h-24.9l-32.4,75.4h490l-32.4-75.4h-24.9L523.4,947.7c-2-5-5.3-9.2-9.8-12.6C509,931.7,504.5,930,500,930z"/></g></g></svg>
                <span>{{f}}</span>
          </span>
          {% endfor %}
          </span>
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-blueGray-400">
          License
        </dt>
        <dd class="mt-1 text-sm text-blueGray-200 sm:mt-0 sm:col-span-2">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-green-100 text-green-800">
            {{apps.license}}
          </span>
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-blueGray-400">
          Code repository
        </dt>
        <dd class="mt-1 text-sm text-blueGray-200 sm:mt-0 sm:col-span-2">
          <a class="font-bold underline" href="{{apps.repository}}">{{apps.repo_name}}</a>
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-blueGray-400">
          Uses extensions
        </dt>
        <dd class="mt-1 text-sm text-blueGray-200 sm:mt-0 sm:col-span-2">
        {% for item in apps.extensions %}
          <a class="underline font-bold mr-2" href="/extension/{{item.repo_name}}">{{item.name}}</a>
        {% endfor %}
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-blueGray-400">
          Supported by
        </dt>
        <dd class="mt-1 text-sm text-blueGray-200 sm:mt-0 sm:col-span-2 space-x-2">
          {% for item in apps.supported_by %}
          <a href="{{item.link}}" target="_blank">
            <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
            {{item.name}}
          </span></a>
          {% endfor %}
          
          <a href="/contribute/" target="_blank">
            <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-green-100 text-green-800">
              Support the project
            </span>
          </a>
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-blueGray-400">
          Developed by
        </dt>
        <dd class="mt-1 text-sm text-blueGray-200 sm:mt-0 sm:col-span-2 space-x-2">
          {% for item in apps.developed_by %}
            <a href="{{item.link}}" target="_blank">
              <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                {{item.name}}
              </span>
            </a>
          {% endfor %}
          
          <a href="{{apps.repository}}" target="_blank">
            <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-green-100 text-green-800">
              Participate
            </span>
          </a>
        </dd>
      </div>
    </dl>
  </div>
  </div>
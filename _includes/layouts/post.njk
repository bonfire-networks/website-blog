---
layout: layouts/base.njk
templateClass: tmpl-post
---


<div class="max-w-screen-lg px-6 mx-auto mt-0 mb-12 lg:px-0">
  <div class="max-w-screen-md py-8 pb-8 mx-auto">
    <a class="link mb-12  link-hover inline-flex items-center gap-2" href="/blog">
      <div class="rounded-full border w-8 h-8 border-base-content/30 border flex place-content-center items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-blueGray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </div>
        <span class="text-sm font-medium text-blueGray-300">Back to Newsroom</span>
    </a>
    <div class="">
       <div class="my-6 mt-8 text-base text-base-content/70">
          <span>Published {{ date | readableDate }} in  {%- for tag in tags | filterTagList -%}
          {%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
            <a href="{{ tagUrl | url }}">
            <span class="link capitalize">
              {{ tag }}
            </span>
            </a>
          {%- endfor %}</span>
      </div>
     

      <h1 style="line-height: 50px;" class="z-10 col-span-2 text-2xl lg:text-4xl mt-6 font-bold text-left">{{title}}</h1>
     
     

      {% if header_html %}
        {{ header_html | safe }}
      {% else %}
        <img src="{{image}}" alt="post image" class="w-full max-h-[400px] mt-6 rounded-lg object-fit object-cover" />
      {% endif %}
 
    </div>
  </div>

  <article class="max-w-screen-md mx-auto mt-0">
    <div class="max-w-screen-md mx-auto mt-0 prose prose-light">
    {{ content | safe }}
    </div>
  </article>


    
</div>

  <div class="mx-4 mt-8 lg:mx-auto">
    {% include "newsletter.njk" %}
    </div>

  

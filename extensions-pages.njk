---
layout: layouts/base.njk
pagination:
    data: extensions
    size: 1
    alias: extensions
permalink: "extensions/{{extensions.slug}}"
---

<a href="/extensions">
<div class="inline-flex mb-6 cursor-pointer hover:bg-blueGray-600 rounded-full bg-blueGray-700 px-3 py-1.5  items-center space-x-2">
  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
  </svg>
  <span class="text-sm text-gray-300 font-medium">Back to extensions</span>
</div>
</a>
<div class="flex">
  <div class="flex-1">
      <h1 class="text-gray-200 text-3xl font-bold">{{extensions.name}}</h1>
      <p class="text-gray-300 w-full prose prose-md max-w-prose mt-2">{{extensions.note}}</p>
      <div class="flex items-center space-x-3 mt-3">
        <a href="https://github.com/bonfire-networks/bonfire-app" target="_blank" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          Contribute
        </a>
        <a href="https://opencollective.com/bonfire-networks" target="_blank" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Donate
        </a>
      </div>
      
  </div>
</div>
<div class="border-t border-gray-600 mt-12 py-5 sm:p-0">
  <dl class="sm:divide-y sm:divide-gray-600">
    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
      <dt class="text-sm font-medium text-gray-400">
        License
      </dt>
      <dd class="mt-1 text-sm text-gray-200 sm:mt-0 sm:col-span-2">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-green-100 text-green-800">
          {{extensions.license}}
        </span>
      </dd>
    </div>
    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
      <dt class="text-sm font-medium text-gray-400">
        Repository
      </dt>
      <dd class="mt-1 text-sm text-gray-200 sm:mt-0 sm:col-span-2">
        <a class="font-bold underline" href="{{extensions.repository}}">{{extensions.repo_name}}</a>
      </dd>
    </div>
    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
      <dt class="text-sm font-medium text-gray-400">
        Used in
      </dt>
      <dd class="mt-1 text-sm text-gray-200 sm:mt-0 sm:col-span-2">
        {% for item in extensions.used_in %}
          <a class="underline font-bold mr-2" href="{{item.link}}">{{item.name}}</a>
        {% endfor %}
      </dd>
    </div>
    
    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
      <dt class="text-sm font-medium text-gray-400">
        Developed by
      </dt>
      <dd class="mt-1 text-sm text-gray-200 sm:mt-0 sm:col-span-2 space-x-2">
        {% for item in extensions.developed_by %}
          <a href="{{item.link}}" target="_blank">
            <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              {{item.name}}
            </span>
          </a>
        {% endfor %}
      </dd>
    </div>
    
  </dl>
</div>